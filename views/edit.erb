<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Memo Cloud</title>
        <link rel="stylesheet" href="/css/pure-min.css">
        <link rel="stylesheet" href="/css/semantic.min.css">
        <link rel="stylesheet" href="/css/card.min.css">
        <link rel="stylesheet" href="/css/custom-menu.css">
        <script src="/js/jquery-1.12.0.min.js"></script>
        <script src="/js/semantic.min.js"></script>
        <style>
            .main {
                padding: 2em;
                color: black;
            }
        </style>
    </head>

    <body>
        <div class="custom-menu-wrapper">
            <div class="pure-menu custom-menu custom-menu-top">
                <a href="/" class="pure-menu-heading custom-menu-brand">Memo Cloud</a>
            </div>
        </div>

        <div class="main">
            <!-- フォームに関する記述はここに -->
            <form class="pure-form" action="/renew/<%= @item.id %>" method="post">
                <fieldset>
                    <legend>メモの編集</legend>

                    <input type="text" name="title" placeholder="タイトル" value="タイトル">
                    <input type="text" name="body" placeholder="内容" value="内容">

                    <label for="categories">カテゴリ</label>
                    <select id="categories" name="category">
                        <!-- カテゴリに関する記述はここに -->
                        <option value="PROGRAMING">PROGRAMING</option>
                        <option value="WEB">WEB</option>
                        <option value="DESIGN">DESIGN</option>
                        <option value="LIFE HACK">LIFE HACK</option>
                        <option value="HOBBY">HOBBY</option>
                        <option value="OTHER">OTHER</option>
                    </select>

                    <button type=“submit” class="pure-button pure-button-primary">更新</button>
                    </form>
                </fieldset>
            </form>
        </div>
    </body>
</html>
